{
  "name": "@young-money/test-pkg",
  "version": "1.1.7",
  "description": "A tiny npm package that provides a simple add(a, b) function.",
  "keywords": [
    "add",
    "sum",
    "utility"
  ],
  "license": "MIT",
  "author": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/atldays/test-pkg"
  },
  "homepage": "https://github.com/atldays/test-pkg",
  "bugs": {
    "url": "https://github.com/atldays/test-pkg/issues"
  },
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "prepare": "husky",
    "prepublishOnly": "npm run build",
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "test:ci": "jest --ci --passWithNoTests",
    "test:related": "jest --bail --passWithNoTests --findRelatedTests",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "release": "release-it",
    "release:ci": "release-it --ci"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,cjs,mjs}": [
      "biome check --write --unsafe",
      "npm run test:related"
    ],
    "*.{json,css,scss,html}": [
      "npm run format"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@microsoft/api-extractor": "^7.52.13",
    "@release-it/conventional-changelog": "^10.0.1",
    "@swc/core": "^1.7.0",
    "@swc/jest": "^0.2.36",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.18.4",
    "husky": "^9.0.11",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "jest-webextension-mock": "^4.0.0",
    "lint-staged": "^15.2.10",
    "release-it": "^19.0.5",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "overrides": {
    "test-exclude": {
      "glob": "^9.3.5"
    },
    "tsup": {
      "source-map": "^0.7.4"
    }
  }
}
